# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ieee_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"
 
# Application
PORT=3000
NODE_ENV="development"

# Email Configuration (SMTP)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@example.com"
MAIL_PASSWORD="your-email-password"
MAIL_FROM="IEEE <noreply@ieee.org>"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DEST="./uploads"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# IEEE Membership Verification (pode ser uma API externa ou lista interna)
IEEE_VERIFICATION_ENABLED=true
